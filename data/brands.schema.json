{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brands / Sections schema",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["sectionId", "title", "items"],
    "properties": {
      "sectionId": {
        "type": "string",
        "pattern": "^section-[1-9][0-9]*$"
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "oneOf": [
            {
              "required": ["brand", "specialization", "consumables"],
              "properties": {
                "brand": { "type": "string" },
                "specialization": { "type": "string" },
                "consumables": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "id": { "type": "string" }
              },
              "additionalProperties": false
            },
            {
              "required": ["service", "description", "deliverables"],
              "properties": {
                "service": { "type": "string" },
                "description": { "type": "string" },
                "deliverables": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "id": { "type": "string" }
              },
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "additionalProperties": false
  }
}
